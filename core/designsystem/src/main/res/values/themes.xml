<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UniversitySchedule" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarLayoutStyle">@style/Widget.UniversitySchedule.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.UniversitySchedule.Toolbar</item>
        <!--<item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>-->
        <item name="floatingActionButtonStyle">
            @style/Widget.UniversitySchedule.FloatingActionButton
        </item>
        <item name="bottomNavigationStyle">
            @style/Widget.UniversitySchedule.BottomNavigationView
        </item>
        <item name="navigationRailStyle">
            @style/Widget.UniversitySchedule.NavigationRailView
        </item>
    </style>

    <style name="Widget.UniversitySchedule.NavigationRailView" parent="Widget.Material3.NavigationRailView">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.UniversitySchedule.NavigationRailView
        </item>
        <item name="itemTextAppearanceActive">
            @style/Widget.UniversitySchedule.textAppearanceActive
        </item>
        <item name="itemTextAppearanceInactive">
            @style/Widget.UniversitySchedule.textAppearanceInactive
        </item>
    </style>

    <style name="ThemeOverlay.UniversitySchedule.NavigationRailView" parent="">
        <!-- Background color. -->
        <item name="colorSurface">@color/primary_color</item>
        <!-- active indicator color -->
        <item name="colorSecondaryContainer">@color/accent_color</item>
        <!-- inactive icon color and inactive label color -->
        <item name="colorOnSurfaceVariant">@color/secondary_text_color</item>
        <!-- active icon color. -->
        <item name="colorOnSecondaryContainer">@color/secondary_color</item>
        <!-- active label color. -->
        <item name="colorOnSurface">@color/text_color</item>
    </style>

    <style name="Widget.UniversitySchedule.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.UniversitySchedule.BottomNavigationView
        </item>
        <!-- font style active. -->
        <item name="itemTextAppearanceActive">
            @style/Widget.UniversitySchedule.textAppearanceActive
        </item>
        <!-- font style inactive -->
        <item name="itemTextAppearanceInactive">
            @style/Widget.UniversitySchedule.textAppearanceInactive
        </item>
    </style>

    <style name="ThemeOverlay.UniversitySchedule.BottomNavigationView" parent="">
        <!-- background color. -->
        <item name="colorSurfaceContainer">@color/primary_color</item>
        <!-- inactive icon color and inactive label color -->
        <item name="colorOnSurfaceVariant">@color/secondary_text_color</item>
        <!-- active icon color. -->
        <item name="colorOnSecondaryContainer">@color/secondary_color</item>
        <!-- active label color. -->
        <item name="colorOnSurface">@color/text_color</item>
        <!-- Color of the container of the selected section of the nav bottom bar. -->
        <item name="colorSecondaryContainer">@color/accent_color</item>
    </style>

    <style name="Widget.UniversitySchedule.textAppearanceActive" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.UniversitySchedule.textAppearanceInactive" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.UniversitySchedule.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/primary_color</item>
    </style>

    <style name="MyActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <!-- Cambiar el fondo del botÃ³n -->
        <item name="android:background">
            @drawable/background_rounded_bottom_schedule_registration_options
        </item>
    </style>

    <style name="Widget.UniversitySchedule.Toolbar" parent="Widget.Material3.Toolbar">
        <!-- theme -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.UniversitySchedule.Toolbar</item>
        <!-- top bar title font -->
        <item name="titleTextAppearance">@style/Widget.UniversitySchedule.textAppearanceTitleLarge
        </item>
        <item name="popupTheme">@style/CustomPopupMenuStyle</item>
    </style>

    <style name="ThemeOverlay.UniversitySchedule.Toolbar" parent="">
        <!-- Change the color of the top bar icons -->
        <!-- NOTA: the top bar list icon does not change as it is obtained programmatically -->
        <item name="colorOnSurfaceVariant">@color/text_color</item>
        <!-- Menu and overflow icon color -->
        <item name="colorControlNormal">@color/text_color</item>
    </style>

    <style name="Widget.UniversitySchedule.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.UniversitySchedule.FloatingActionButton
        </item>
    </style>

    <style name="ThemeOverlay.UniversitySchedule.FloatingActionButton" parent="">
        <!-- FAB background color -->
        <item name="colorContainer">@color/accent_color</item>
        <!-- FAB icon color -->
        <item name="colorOnContainer">@color/secondary_color</item>
    </style>

    <style name="Widget.UniversitySchedule.textAppearanceTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomPopupMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#DDDDDF</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>

    <style name="Widget.App.TextInputLayout2" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#DDDDDF</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>
</resources>
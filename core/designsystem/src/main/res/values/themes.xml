<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UniversitySchedule" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appBarLayoutStyle">@style/Widget.UniversitySchedule.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.UniversitySchedule.Toolbar</item>
    </style>

    <style name="Widget.UniversitySchedule.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/primary_color</item>
    </style>

    <style name="Widget.UniversitySchedule.Toolbar" parent="Widget.Material3.Toolbar">
        <!-- theme -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.UniversitySchedule.Toolbar</item>
        <!-- top bar title font -->
        <item name="titleTextAppearance">@style/Widget.UniversitySchedule.textAppearanceTitleLarge
        </item>
        <item name="popupTheme">@style/CustomPopupMenuStyle</item>
    </style>

    <style name="ThemeOverlay.UniversitySchedule.Toolbar" parent="">
        <!-- Change the color of the top bar icons -->
        <!-- NOTA: the top bar list icon does not change as it is obtained programmatically -->
        <item name="colorOnSurfaceVariant">@color/secondary_text_color</item>
        <!-- Menu and overflow icon color -->
        <item name="colorControlNormal">@color/secondary_text_color</item>
    </style>

    <style name="Widget.UniversitySchedule.textAppearanceTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomPopupMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#DDDDDF</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>

    <style name="Widget.App.TextInputLayout2" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#DDDDDF</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_hint_color</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>
</resources>